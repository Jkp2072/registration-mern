extends layout

block content 
    h2.page-header Log in 
    p New students must Login here
    form(method='post',action='/users/login')
        .form-group
        label Username
        input.form-control(name='username', type='text', placeholder='Enter username')
        .form-group
        label Password
        input.form-control(name='password', type='password', placeholder='Enter password')
        
        .form-group
        input.form-control.btn.btn-success(type='submit',name='submit',value='Login')